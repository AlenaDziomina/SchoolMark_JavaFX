<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0"
            xmlns="http://javafx.com/javafx/8.0.76-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.grouk.schoolmark.controller.ChildController">
   <center>
      <TableView fx:id="chdList" onMouseClicked="#onTableClick" BorderPane.alignment="CENTER">
        <columns>
            <TableColumn fx:id="chdId" prefWidth="75.0" text="id" visible="false" />
          <TableColumn fx:id="chdName" minWidth="20.0" prefWidth="315.0" text="%child.name" />
        </columns>
         <BorderPane.margin>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </BorderPane.margin>
      </TableView>
   </center>
   <top>
      <HBox BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
         </BorderPane.margin>
         <TextField fx:id="nameFld" promptText="%child.name">
            <HBox.margin>
               <Insets/>
            </HBox.margin>
         </TextField>
         <Button mnemonicParsing="false" onMouseClicked="#onAddButtonClick" text="%child.add">
            <HBox.margin>
               <Insets left="8.0"/>
            </HBox.margin>
         </Button>
         <Button mnemonicParsing="false" onMouseClicked="#onUpdateButtonClick" text="%child.update">
            <HBox.margin>
               <Insets left="8.0"/>
            </HBox.margin>
         </Button>
         <Button mnemonicParsing="false" onMouseClicked="#onDeleteButtonClick" text="%child.delete">
            <HBox.margin>
               <Insets left="8.0"/>
            </HBox.margin>
         </Button>
      </HBox>
   </top>
</BorderPane>
